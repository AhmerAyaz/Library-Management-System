@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="urdu" style="text-align:center;">نیا  کسٹمر</h2>

@using (Html.BeginForm("Save", "Customers", FormMethod.Post, new { dir = "rtl", @class = "urdu" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", dir = "rtl" })
        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "", new { @class = "form-control", style = "font-size: medium; padding: 0px 12px;" })
        @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
        @Html.ValidationMessageFor(m => m.Customer.MembershipType)
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)
    </div>
    @*<div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control", dir = "rtl" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)
    </div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Phone)
        @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control", dir = "ltr", placeholder="+923312345678" })
        @Html.ValidationMessageFor(m => m.Customer.Phone)
        
    </div>
    
    @*<div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
            </label>
        </div>*@
    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
